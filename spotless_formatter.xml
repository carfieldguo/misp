<?xml version="1.0" encoding="UTF-8"?>
<profiles version="13">
    <profile kind="CodeFormatterProfile" name="Spotless Custom Format" version="13">
        <!-- 基础缩进设置 -->
        <setting id="org.eclipse.jdt.core.formatter.indentation.size" value="4"/>
        <setting id="org.eclipse.jdt.core.formatter.tabulation.size" value="4"/>
        <setting id="org.eclipse.jdt.core.formatter.use_tabs_only_for_leading_indentations" value="false"/>
        <setting id="org.eclipse.jdt.core.formatter.continuation_indentation" value="1"/>
        
        <!-- 大括号位置设置 -->
        <setting id="org.eclipse.jdt.core.formatter.brace_position_for_class_declaration" value="same_line"/>
        <setting id="org.eclipse.jdt.core.formatter.brace_position_for_method_declaration" value="same_line"/>
        <setting id="org.eclipse.jdt.core.formatter.brace_position_for_constructor_declaration" value="same_line"/>
        <setting id="org.eclipse.jdt.core.formatter.brace_position_for_block" value="same_line"/>
        <setting id="org.eclipse.jdt.core.formatter.brace_position_for_switch" value="same_line"/>
        <setting id="org.eclipse.jdt.core.formatter.brace_position_for_if" value="same_line"/>
        <setting id="org.eclipse.jdt.core.formatter.brace_position_for_else" value="same_line"/>
        <setting id="org.eclipse.jdt.core.formatter.brace_position_for_for" value="same_line"/>
        <setting id="org.eclipse.jdt.core.formatter.brace_position_for_while" value="same_line"/>
        <setting id="org.eclipse.jdt.core.formatter.brace_position_for_do" value="same_line"/>
        <setting id="org.eclipse.jdt.core.formatter.brace_position_for_try" value="same_line"/>
        <setting id="org.eclipse.jdt.core.formatter.brace_position_for_catch" value="same_line"/>
        <setting id="org.eclipse.jdt.core.formatter.brace_position_for_finally" value="same_line"/>
        
        <!-- 换行与续行设置 -->
        <setting id="org.eclipse.jdt.core.formatter.line_split" value="120"/>
        <setting id="org.eclipse.jdt.core.formatter.join_wrapped_lines" value="false"/>
        <setting id="org.eclipse.jdt.core.formatter.wrap_before_method_invocation_operator" value="true"/>
        <setting id="org.eclipse.jdt.core.formatter.continuation_indentation_for_method_invocation" value="1"/>
        
        <!-- 空格设置 -->
        <setting id="org.eclipse.jdt.core.formatter.insert_space_after_comma_in_argument_list" value="insert"/>
        <setting id="org.eclipse.jdt.core.formatter.insert_space_after_comma_in_enum_declarations" value="insert"/>
        <setting id="org.eclipse.jdt.core.formatter.insert_space_after_comma_in_parameterized_type_reference" value="insert"/>
        <setting id="org.eclipse.jdt.core.formatter.insert_space_between_binary_operators" value="insert"/>
        <setting id="org.eclipse.jdt.core.formatter.insert_space_after_typecast" value="insert"/>
        <setting id="org.eclipse.jdt.core.formatter.insert_space_before_opening_parenthesis_in_method_invocation" value="do not insert"/>
        <setting id="org.eclipse.jdt.core.formatter.insert_space_after_period_in_method_invocation" value="do not insert"/>
        
        <!-- 导入设置 -->
        <setting id="org.eclipse.jdt.core.formatter.blank_lines_after_imports" value="1"/>
        <setting id="org.eclipse.jdt.core.organize_imports.sort_static_imports_separately" value="true"/>
        
        <!-- 空白行设置 -->
        <setting id="org.eclipse.jdt.core.formatter.blank_lines_after_package" value="1"/>
        <setting id="org.eclipse.jdt.core.formatter.blank_lines_between_type_declarations" value="1"/>
        <setting id="org.eclipse.jdt.core.formatter.preserve_blank_lines_between_statements" value="1"/>
        
        <!-- 关键：注释设置（完全禁用自动换行和格式化） -->
        <setting id="org.eclipse.jdt.core.formatter.format_line_comments" value="false"/>
        <setting id="org.eclipse.jdt.core.formatter.format_block_comments" value="false"/>
        <setting id="org.eclipse.jdt.core.formatter.comment.format_javadoc_comments" value="false"/>
        <setting id="org.eclipse.jdt.core.formatter.comment.line_length" value="9999"/> <!-- 使用极大值替代0，避免某些版本兼容性问题 -->
        <setting id="org.eclipse.jdt.core.formatter.comment.wrap_line_length" value="9999"/>
        <setting id="org.eclipse.jdt.core.formatter.comment.new_lines_at_block_boundaries" value="false"/>
        <setting id="org.eclipse.jdt.core.formatter.comment.new_lines_at_javadoc_boundaries" value="false"/>
        <setting id="org.eclipse.jdt.core.formatter.comment.indent_parameter_description" value="false"/>
        <setting id="org.eclipse.jdt.core.formatter.comment.indent_root_tags" value="false"/>
        
        <!-- 其他重要设置 -->
        <setting id="org.eclipse.jdt.core.formatter.keep_imple_empty_lines" value="false"/>
        <setting id="org.eclipse.jdt.core.formatter.insert_space_before_closing_brace_in_array_initializer" value="insert"/>
        <setting id="org.eclipse.jdt.core.formatter.use_on_off_tags" value="false"/>
        <!-- 禁用注释与代码的自动对齐 -->
        <setting id="org.eclipse.jdt.core.formatter.align_comment_with_code" value="false"/>
    </profile>
</profiles>
